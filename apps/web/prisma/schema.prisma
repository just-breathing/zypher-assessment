generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified Boolean?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  image         String?
  accounts      Account[]
  sessions      Session[]
  agents        Agent[]
}

model Account {
  id                String    @id @default(cuid())
  accountId         String
  providerId        String
  userId            String
  password          String?
  accessToken       String?
  refreshToken      String?
  idToken           String?
  expiresAt         DateTime?
  scope             String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
}

model Session {
  id           String    @id @default(cuid())
  token        String    @unique
  expiresAt    DateTime
  userId       String
  ipAddress    String?
  userAgent    String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Custom models
model Agent {
  id                String          @id @default(cuid())
  userId            String
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  name              String
  description       String
  model             String // e.g., 'gpt-4o'
  provider          String // e.g., 'anthropic', 'openai'
  providerApiKey    String? // User's API key for the provider
  systemInstruction String
  createdAt         DateTime        @default(now())
  theme             Json
  apiKey            String          @unique @default(cuid())
  apiSecret         String          @default(cuid())
  knowledgeSources  KnowledgeSource[]
}

model KnowledgeSource {
  id          String   @id @default(cuid())
  agentId     String
  agent       Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  type        String // 'text' or 'url'
  content     String
  lastUpdated DateTime @default(now())
  embedding   Bytes? // Store vector embedding here
}
